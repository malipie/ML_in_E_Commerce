# ── Time Series Forecasting — Environment Variables ──
# Copy to .env and fill in production values.

# API Security
TSF_API_KEY_SECRET=change-me-in-production
TSF_API_KEY_ENABLED=true
TSF_RATE_LIMIT_PER_MINUTE=60
TSF_CORS_ORIGINS=*

# MLflow
TSF_MLFLOW_TRACKING_URI=http://mlflow:5000

# Paths (inside Docker)
TSF_DATA_DIR=/app/Data
TSF_MODELS_DIR=/app/models

# Retraining
TSF_RETRAINING_SCHEDULE_HOURS=168

# Grafana
GF_SECURITY_ADMIN_PASSWORD=admin
